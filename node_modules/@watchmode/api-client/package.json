{
    "name": "@watchmode/api-client",
    "version": "1.0.0",
    "description": "Official TypeScript/JavaScript client for the Watchmode Streaming Availability API",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE",
        "CHANGELOG.md"
    ],
    "scripts": {
        "generate": "openapi-ts",
        "build": "tsup src/index.ts --format cjs,esm --dts --clean",
        "prepublishOnly": "npm run build",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "watchmode",
        "streaming",
        "api",
        "netflix",
        "hulu",
        "disney",
        "hbo",
        "prime-video",
        "movies",
        "tv-shows",
        "typescript",
        "sdk"
    ],
    "author": "Watchmode",
    "license": "MIT",
    "homepage": "https://api.watchmode.com",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/watchmode/api-client.git"
    },
    "bugs": {
        "url": "https://github.com/watchmode/api-client/issues"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@hey-api/openapi-ts": "^0.88.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0"
    }
}
